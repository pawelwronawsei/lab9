@model List<WebApp.Models.VideoGames.RegionSale>

@{
    ViewBag.Title = "Game Details";
    Layout = "_Layout";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 16px;
        text-align: left;
    }

    table thead {
        background-color: #007bff;
        color: #fff;
    }

    table th,
    table td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    table tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    table tbody tr:hover {
        background-color: #f1f1f1;
    }

    table th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #007bff;
        color: white;
    }

    table td {
        padding: 10px;
    }
</style>

<h2>Szczegóły gry</h2>

<table>
    <thead>
    <tr>
        <th>Platforma</th>
        <th>Region</th>
        <th>Ilość sprzedanych kopii</th>
        <th>Data wydania gry na platformie</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var regionSale in Model)
    {
        <tr>
            <td>@regionSale.GamePlatform.Platform.PlatformName</td>
            <td>@regionSale.Region.RegionName</td>
            <td>@((int)(regionSale.NumSales * 1000000))</td>
            <td>@regionSale.GamePlatform.ReleaseYear</td>
        </tr>
    }
    </tbody>
</table>