@model WebApp.Models.VideoGames.AddGameFormModel

@{
    ViewBag.Title = "Add Game";
    Layout = "_Layout";
}

<h2>Add a New Game</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="GameName">Game Name</label>
        <input type="text" class="form-control" id="GameName" name="GameName" value="@Model?.GameName" />
        <span asp-validation-for="GameName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="GenreId">Genre</label>
        <select id="GenreId" name="GenreId" class="form-control">
            <option value="">Select a Genre</option>
            @foreach (var genre in ViewBag.Genres as SelectList)
            {
                <option value="@genre.Value">@genre.Text</option>
            }
        </select>
        <span asp-validation-for="GenreId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Add Game</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}