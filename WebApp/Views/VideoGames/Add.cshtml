@model WebApp.Models.VideoGames.AddGameFormModel

@{
    ViewBag.Title = "Add Game";
    Layout = "_Layout";
}

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 5px; 
    }

    .btn-lg {
        padding: 15px 30px;
        font-size: 16px;
    }

    h2 {
        font-family: 'Arial', sans-serif;
        font-weight: 600;
        font-size: 28px;
        }
</style>        


<h2 class="text-center mb-4">Dodaj grę</h2>

<form asp-action="Add" method="post" class="mx-auto" style="max-width: 600px;">
    <div class="form-group">
        <label for="GameName">Nazwa gry</label>
        <input type="text" class="form-control" id="GameName" name="GameName" value="@Model?.GameName" placeholder="Wpisz nazwę gry." />
        <span asp-validation-for="GameName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="GenreId">Gatunek</label>
        <select id="GenreId" name="GenreId" class="form-control">
            <option value="">Wybierz gatunek</option>
            @foreach (var genre in ViewBag.Genres as SelectList)
            {
                <option value="@genre.Value">@genre.Text</option>
            }
        </select>
        <span asp-validation-for="GenreId" class="text-danger"></span>
    </div>

    <div class="form-group text-center mt-4">
        <button type="submit" class="btn btn-success btn-lg">Dodaj grę</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}